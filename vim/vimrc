

set encoding=UTF-8
set number
set relativenumber
set autoindent
set tabstop=4
set shiftwidth=4
set smarttab
set softtabstop=4
set mouse+=a

syntax on
colorscheme monokai

 " make it obivous where the 80 characcter limit is.
if exists('+colorcolumn')
  set colorcolumn=80
else
  au BufWinEnter * let w:m2=matchadd('ErrorMsg', '\%>80v.\+', -1)
endif



inoremap jk <ESC>

" Ingore Ex mode
map Q <Nop>

